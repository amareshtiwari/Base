<?xml version="1.0"?>
<config>
    <tabs> <!--create new tabe datetave-->
        <codesbug translate="label" module="base">
            <label>Codesbug</label>
            <sort_order>1</sort_order>
        </codesbug>
    </tabs>
    <sections><!---Add section to the tab dasescetion-->
        <basesection translate="label" module="base">
            <class>separator-top</class>
            <label>Codesbug Base</label>
            <tab>codesbug</tab>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups><!--create group dase-->
                <base translate="label">
                    <label>Codesbug Base</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                   
                    <fields><!--add fields for enable the jquery-->
                        <basejquery translate="label">
                            <label>JQuery Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>99</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>	
                            <show_in_store>1</show_in_store>
                        </basejquery>
                    </fields>
                </base>
            </groups>
        </basesection>
    </sections>
</config>

